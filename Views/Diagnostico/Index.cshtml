@model IEnumerable<WebProjeto.Models.Diagnostico>

<h2>Diagnósticos do Paciente</h2>

<a asp-action="Create" asp-route-clienteId="@ViewBag.ClienteId" class="btn btn-success mb-3">Novo Diagnóstico</a>

<table class="table">
    <thead>
        <tr>
            <th>Doença</th>
            <th>Data</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.Doenca</td>
                <td>@d.DataDiagnostico?.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (!string.IsNullOrEmpty(d.CaminhoPdf))
                    {
                        <a class="btn btn-sm btn-success" href="@Url.Action("DownloadPdf", "Diagnostico", new { id = d.Id })" target="_blank">Download PDF</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Index" asp-controller="Cliente" class="btn btn-secondary mt-3">Voltar para Pacientes</a>
