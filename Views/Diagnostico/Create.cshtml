@model WebProjeto.Models.Diagnostico

<h2>Novo Diagnóstico</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="ClienteId" />

    <div class="form-group">
        <label asp-for="Doenca"></label>
        <input asp-for="Doenca" class="form-control" />
        <span asp-validation-for="Doenca" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataDiagnostico"></label>
        <input asp-for="DataDiagnostico" type="date" class="form-control" />
        <span asp-validation-for="DataDiagnostico" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-2">Salvar como PDF</button>
    <a asp-action="Index" asp-route-clienteId="@Model.ClienteId" class="btn btn-secondary mt-2 ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
